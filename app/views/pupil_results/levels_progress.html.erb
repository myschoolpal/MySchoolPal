					<div id="chart2" style="width:550px; height:520px;"></div>
					<div id="chart1"  style="width:550px; height:520px;"></div>
					<div id="no_data" style="width:550px;">No Data</div>
				</div>	


		
		<br />
	
		<br />
		
	</div>
</div>

