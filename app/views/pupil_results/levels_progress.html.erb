<ul class="nav nav-tabs" id="myTab">
			<li><%=link_to @class.to_s + " - " + @subject.to_s, pupil_results_path(class_id: @class_id, col_id: @col_id)%></li>
			<li class="active"><%=link_to 'Levels of Progress', levels_progress_pupil_results_path(class_id: @class_id, col_id: @col_id)%></li>
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">
					Assessments<span class="caret"></span>
				</a>	
				<ul class="dropdown-menu">
						<li style="text-align:center; font-weight:bold">Locked Cols</li>
						<%@titles.where(locked: true).each do |t|%>
							<li><%=link_to t.title, levels_progress_pupil_results_path(class_id: @class_id, locked: true, col_id: t.col_id)%></li>
						<%end%>
						<li style="text-align:center; font-weight:bold">Unlocked Cols</li>
						<%@titles.where(locked: false).each do |t|%>
							<li><%=link_to t.title, levels_progress_pupil_results_path(class_id: @class_id, locked: false, col_id: t.col_id)%></li>
						<%end%>	
				</ul>
			</li>
</ul>
<div class="row-fluid" style="margin-top:20px;">
	<div class="col-md-6 col-xs-6">
		<div class="row">
			<div class="col-xs-3 col-md-3">
			Surname
			</div>
			<div class="col-xs-3 col-md-3">
			Forename
			</div>
			<div class="col-xs-2 col-md-2">
			Target
			</div>
			<div class="col-xs-2 col-md-2">
			<%if title = TitleClass.where(class_id: @class_id).where(col_id: @col_id).where(locked: @locked).first%>
			<%=title.title%>			
			<%else%>
			Result
			<%end%>
			</div>
			<div class="col-xs-2 col-md-2">
			Levels of Progress
			</div>
		</div>
		
		<%aps = Array.new%>
		<%@u.each do |p|%>
			<%if a = p.user_info%>
				<div class="row">
					<div class="col-xs-3">
						<%=link_to(a.surname.downcase.titleize.slice(0..12), personal_analysis_path(user_id: a.user_id, class_id: @class_id))%>
					</div>
					<div class="col-xs-3">
						<%=link_to(a.forename.downcase.titleize.slice(0..12), personal_analysis_path(user_id: a.user_id, class_id: @class_id))%>
					</div>
					<div class="col-xs-2">
					<%if @subject_id%>
						<%if t = p.user_targets.where(subject_id: @subject_id).first%>
					
							<%=t.result.grade%>
						<%end%>
					<%end%>
					</div>
					<div class="col-xs-2">
						<%if r = p.pupil_results.where(col_id: @col_id).where(locked:@locked).where(class_id: @class_id).first%>
						
							<%=r.result.grade%>
							<%aps << r.result.aps%>
						<%end%>
					</div>
					<div class="col-xs-2">
							<%if k = Result.where(id: a.ks2_maths).first%>
								<%if r %>
									<%k.aps%>
									<%r.result.aps%>
									<%diff = r.result.aps- k.aps%>
										
										<%if r.result.aps >80%>
											
											<%(7..53).step(6).each do |n|%>
												<%if k.aps >=n && k.aps <=n+5%>
												
													<%j=79+((n-7)/6)%>
													<%(81..88).each do |i|%>
														<%if r.result.aps == i%>
															<%=i-j%>
														<%end%>
													<%end%>
												<%end%>
											
											<%end%>
										<%end%>
										
										<%if r.result.aps <54%>
										<%if diff == 0%>
											No Progress
										<%end%>
										<%if diff == 1 || diff==2%>
											1 Sub level
										<%end%>
										<%(3..50).step(2).each do |i|%>
											<%if diff==i || diff==i+1%>
												<%=((i+1)/2)%> sub levels
											<%end%>
											<%if diff==(i*-1) || diff==((i+1)*-1)%>
												<%=(((i+1)/2)*-1)%> sub levels
											<%end%>
											<%i=+2%>
										<%end%>
										<%end%>
									
								<%end%>
							<%end%>
						</div>
				</div>
			<%end%>		
		<%end%>
		
	</div>
	<div class="col-md-6 col-xs-6">
			<%if !aps.empty?%>
				<%avg_aps =(aps.inject{|sum,x| sum + x }.to_f/aps.size).round(0)%>
			<%end%>
				
				<div class="row">
					<div id="chart2" style="width:550px; height:350px;"></div>
					<div id="chart1"  style="width:550px; height:350px;"></div>
					<div id="no_data" style="width:550px;">No Data</div>
				</div>	


		
		<br />
	
		<br />
		
	</div>
</div>

<%= render "matrix"%>


<%if @subject_id%>
		
<script>
$(document).ready(function(){
  var line1 = [
	<%@u.each do |p|%>
		<%if a = p.user_info%>		
			['<%=a.forename%>', <%if r = p.pupil_results.where(col_id: @col_id).where(locked: @locked).joins(:class_name).where("class_names.subject_id" => @subject_id).first%><%=r.result.aps-80%><%end%>],
		<%end%>  
	<%end%>
];
  var line2 = [
  <%@u.each do |p|%>
  	<%if a = p.user_info%>		
