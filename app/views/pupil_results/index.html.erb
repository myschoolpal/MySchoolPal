<% content_for :title, "Results" %>
<div class="row">
	<div class="col-md-12">
			<ul class="nav nav-tabs" id="myTab">
				
				<li class="active">
				<%if @subject%>
				<%=link_to @class_name +' - '+  @subject , pupil_results_path(:class_id=>@class_id)%></li>
				<%else%>
					<%=link_to @class_name, pupil_results_path(:class_id=>@class_id)%></li>
				<%end%>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
					  Groups<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<%Group.all.each do |g|%>
							<li><%=link_to(g.group, group_analysis_path(class_id: @class_id, group_id: g.id, col_id: 'avg'))%></li>	
						<%end%>
					</ul>
				</li>
				
				<li><%=link_to('Gender', gender_analysis_user_groups_path(class_id: @class_id, col_id: 'avg'))%></li>
				
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">
					  Classes<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<%@user_classes.each do |c|%>
							<li><%=link_to(c.class_name.class_name, pupil_results_path(:class_id=>c.class_name.id))%></li>
						<%end%>
					</ul>
				</li>
				<li><%=link_to 'Levels Progress', levels_progress_pupil_results_path(class_id: @class_id, col_id: @col_id)%></li>
				<li class="pull-right"><%=link_to('Next >>',pupil_results_path(class_id: @class_id, col_id: @start_col+6))%></li>
				<%if @start_col > 7%>
				<li class="pull-right"><%=link_to('<< Previous',pupil_results_path(class_id: @class_id, col_id: @start_col-8))%></li>
				<%end%>
			</ul>
</div>
		<br />
			
	<div class="row">
		<div class="col-xs-12 col-md-12">
			<div class="row">
				<div class="col-xs-3 col-md-3">
					<div class="row">
						<div class="col-xs-6 col-md-6">
							Surname
						</div>
						<div class="col-xs-6 col-md-6">
							Forename
						</div>
					</div>
				</div>
				<div class="col-xs-1 col-md-1 text-center">
				Target
				</div>
					<%(@start_col..@start_col+6).each do |k|%>
						<%if @lock = LockColumn.where(:col_id => k).where(:class_id=>@class_id).first%>
						<div class="col-xs-1 col-md-1 text-center" style="height:20px; overflow:hidden;">
						<%=@lock.title.slice(0..20)%>
						</div>
						<%else%>
						<%@t = TitleClass.where(:col_id => k).where(:class_id=>@class_id).first%>						
							<%if @t%>
								<div class="col-xs-1 col-md-1 text-center" style="height:20px; overflow:hidden;" id="userdata" data-toggle="tooltip" data-original-title='
								<%=link_to('Edit', edit_pupil_result_path(k, :class_id=>@class_id), :style => "color:#FFF")%>
								 | <%= link_to "Delete", delete_many_results_path(:col_id =>k, :class_id=>@class_id), :confirm => "Are you sure?" , :style => "color:#FFF" ,  :method => :put %>' data-html="true">														
								<%=@t.title.slice(0..20)%>
								
								<br />
								</div>
								<%else%>
								<div class="col-xs-1 col-md-1 text-center">
								<%=link_to('New', edit_pupil_result_path(k, :class_id=>@class_id))%>
								</div>
							<%end%>
						<%end%>
						
					<%end%>
				<div class="col-md-1 text-center">
					Average
				</div>
			
			</div>
		</div>
	</div>
	
	<hr style="margin:4px;">
	
	<div class="row">
		<div class="col-xs-12 col-md-12">
			<%@pupils.each do |p|%>
					<%if p.user.user_info.pupil==true%>
					<div class="row">		
						<div class="col-xs-3 col-md-3">
							<div class="row">		
								<div class="col-xs-6 col-md-6">
									<%=link_to(p.user.user_info.surname.downcase.titleize.slice(0..12), personal_analysis_path(user_id: p.user.user_info.user_id, class_id: @class_id))%>
								</div>
								<div class="col-xs-6 col-md-6">
									<%=link_to(p.user.user_info.forename, personal_analysis_path(user_id: p.user.user_info.user_id, class_id: @class_id))%>
								</div>
							</div>
						</div>
						<div class=" col-xs-1 col-md-1  text-center">
						<%@t = p.user.user_targets.first%>
						<%if @t%>
							<%=@t.result.grade%>
							<%end%>
						</div>
							<%avg = Array.new%>
						<%(@start_col..@start_col+6).each do |k|%>
							<% @r= p.user.pupil_results.where(:col_id => k).where(:class_id=>@class_id).first%>
							<% if @r && @t %>
								<%@difference = @r.result.aps - @t.result.aps%>
										<%case %>
											<%when @difference >0%>
												<div class="col-xs-1 col-md-1 text-center above_target cell_design">
											<%when @difference ==0%>
												<div class="col-xs-1 col-md-1 text-center on_target cell_design">
											<%when @difference <0 && @difference >=-2 %>
												<div class="col-xs-1 col-md-1 text-center one_below_target cell_design">
											<%when @difference <-2%>
												<div class="col-xs-1 col-md-1 text-center below_target cell_design">
											<%else%>
												<div class="col-xs-1 col-md-1 text-center empty_result cell_design">	
										<%end%>
													<%=@r.result.grade %>
													
													<%avg << @r.result.aps%>
												</div>
							<%else%>
								<div class="col-xs-1 col-md-1 text-center empty_result">
								<%if @r%>
								<%=@r.result.grade %>
								<%avg << @r.result.aps%>
								<%end%>
								</div>
							<%end%>
						<%end%>
						<%if avg.size > 0%>
							<%if @t%>
							<%avg_aps =(avg.inject{|sum,x| sum + x }.to_f/avg.size).round(0)%>
							<% @difference = avg_aps - @t.result.aps%>
											<%case %>
												<%when @difference >0%>
													<div class="col-xs-1 col-md-1 text-center above_target cell_design">
												<%when @difference ==0%>
													<div class="col-xs-1 col-md-1 text-center on_target cell_design">
												<%when @difference <0 && @difference >=-2%>
													<div class="col-xs-1 col-md-1 text-center one_below_target cell_design">
												<%when @difference <-2%>
													<div class="col-xs-1 col-md-1 text-center below_target cell_design">
												<%else%>
													<div class="col-xs-1 col-md-1 text-center empty_result cell_design">	
											<%end%>
								
									
									<%= Result.where(aps: avg_aps).first.grade%>
							</div>
							<%else%>
								<%avg_aps =(avg.inject{|sum,x| sum + x }.to_f/avg.size).round(0)%>
								<div class="col-xs-1 col-md-1 text-center">
									<%= Result.where(aps: avg_aps).first.grade%>
								</div>
							<%end%>
						<%else%>
						<div class="col-xs-1 col-md-1 text-center"></div>
						<%end%>
						
					</div>
				<%end%>
			<hr style="margin:2px;">
			<%end%>
		</div>
	</div>

	<script>
$('body').tooltip({
    trigger: 'hover',
	selector: '[id=userdata]',
	html: true,
	placement: 'top',
	delay: { hide: 2000 }
});
</script>